<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyStyle</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>

    <style name="AlertDialogTitleStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogBodyStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Custom delete dialog style -->
    <style name="DeleteDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/DeleteDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DeleteDialogButtonStyle</item>
    </style>

    <style name="DeleteDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources> 