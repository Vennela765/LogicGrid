<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="24dp">

    <!-- Main Welcome Text -->
    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/welcome_title"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginBottom="16dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/readySubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ready_subtitle"
        android:textSize="18sp"
        android:textColor="@color/accent"
        android:layout_marginBottom="24dp"/>

    <!-- Player Selection -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/playerNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/select_profile"
        app:boxBackgroundColor="#FFFFFF"
        app:boxStrokeColor="#4A4B5E"
        app:hintTextColor="#9E9E9E"
        android:textColorHint="#9E9E9E"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:maxLines="1"
            android:textSize="18sp"
            android:focusable="false"
            android:textColor="#000000"
            android:popupBackground="#FFFFFF"
            android:dropDownVerticalOffset="4dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Player Stats Section -->
    <LinearLayout
        android:id="@+id/statsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <!-- Games Played -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="32dp">
            
            <TextView
                android:id="@+id/diceIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ²"
                android:textSize="24sp"/>
            
            <TextView
                android:id="@+id/gamesPlayedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/games_played"
                android:textColor="@color/accent"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Win Rate -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="32dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­"
                android:textSize="24sp"/>
            
            <TextView
                android:id="@+id/winRateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/win_rate"
                android:textColor="@color/success"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/notYetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_yet"
            android:textColor="@color/accent"
            android:layout_marginEnd="16dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/letsGoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lets_go"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            app:cornerRadius="24dp"/>

    </LinearLayout>

</LinearLayout> 