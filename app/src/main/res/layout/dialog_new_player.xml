<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="24dp">

    <!-- Main Welcome Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/welcome_new"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginBottom="16dp"/>

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/start_adventure"
        android:textSize="18sp"
        android:textColor="@color/accent"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_name"
        app:boxBackgroundColor="@android:color/transparent"
        app:boxStrokeColor="@color/primary"
        app:hintTextColor="@color/accent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:importantForAutofill="yes"
            android:autofillHints="personName"
            android:contentDescription="@string/enter_name"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Fun Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ready_puzzle"
        android:textSize="18sp"
        android:textColor="@color/success"
        android:layout_marginTop="24dp"/>

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/notYetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_yet_button"
            android:textColor="@color/accent"
            android:layout_marginEnd="16dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/letsGoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lets_go_button"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            app:cornerRadius="24dp"/>

    </LinearLayout>

</LinearLayout> 