<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    android:background="@drawable/popup_gradient_background"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Trophy Icon -->
    <ImageView
        android:id="@+id/trophyIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_menu_myplaces"
        android:tint="#FFD700"
        android:contentDescription="Trophy icon" />

    <!-- Congratulations Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Congratulations!"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Level Info -->
    <TextView
        android:id="@+id/levelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- Stars Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:src="@android:drawable/btn_star_big_on"
            android:contentDescription="First star" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:src="@android:drawable/btn_star_big_on"
            android:contentDescription="Second star" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:src="@android:drawable/btn_star_big_on"
            android:contentDescription="Third star" />
    </LinearLayout>

    <!-- Performance Text -->
    <TextView
        android:id="@+id/performanceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <!-- Back to Levels Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/backToLevelsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#80FFFFFF"
            android:padding="12dp"
            android:text="Back"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:cornerRadius="8dp" />

        <!-- Next Level Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextLevelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:padding="12dp"
            android:text="Next"
            android:textColor="@color/primary"
            android:textSize="14sp"
            app:cornerRadius="8dp" />
    </LinearLayout>

</LinearLayout> 