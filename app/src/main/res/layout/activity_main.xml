<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/gameTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LogicGrid"
            android:textColor="@color/primary"
            android:textSize="48sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/gameSubtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test your logical thinking!"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:gravity="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="48dp"
            android:text="PLAY"
            android:textSize="20sp"
            android:backgroundTint="@color/primary"
            app:cornerRadius="30dp" />

        <TextView
            android:id="@+id/instructionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="How to Play"
            android:textColor="@color/primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/instructionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="24dp"
            android:gravity="center"
            android:lineSpacingExtra="8dp"
            android:text="• Logic Grid Puzzles are solved using clues\n\n• Fill the grid with ✓ (yes) and ✗ (no) marks\n\n• Click cells to cycle through ✓, ✗, and empty\n\n• Use logic to determine possible combinations\n\n• Each item matches with one from each category\n\n• Complete by filling all cells correctly!"
            android:textColor="@color/primary"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>